@model WorkFlowWeb.Models.ApplicationUser


<div class="row w-100 justify-content-center px-0 my-auto">
    <div class="card shadow mb-5 border-0 px-0 col-lg-8 col-sm-12">
        <div class="card-header bg-secondary bg-gradient text-white">
            <h2>Delete User</h2>
        </div>
        <div class="card-body">
            <h4>Are you sure you want to delete this category?</h4>
            <dl class="row">
                <dt class="col-sm-2">
                    First Name
                </dt>
                <dd class="col-sm-10">
                    @Model.FirstName
                </dd>
                <dt class="col-sm-2">
                    Last Name
                </dt>
                <dd class="col-sm-10">
                    @Model.LastName
                </dd>
                <dt class="col-sm-2">
                    Email
                </dt>
                <dd class="col-sm-10">
                    @Model.Email
                </dd>
                <dt class="col-sm-2">
                    Address
                </dt>
                <dd class="col-sm-10">
                    @Model.Address
                </dd>
                <dt class="col-sm-2">
                    Phone Number
                </dt>
                <dd class="col-sm-10">
                    @Model.PhoneNumber
                </dd>
            </dl>

           

            <form method="post" asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="row">
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-primary w-100">Delete</button>
                    </div>
                    <div class="col-md-6">
                        <a asp-action="Index" class="btn btn-outline-secondary w-100">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
