@model Category
<div class="row justify-content-center">
    <div class="card shadow mt-4 border-0 px-0 col-sm-11 col-8 col-lg-8">
        <div class="card-header bg-secondary bg-gradient m-lg-0 py-3 ">
            <div class="row">
                <div class=" text-center col-12">
                    <h2 class="text-white py-2">
                        Edit  Category
                    </h2>
                </div>

            </div>
        </div>
        <div class="card-body p-4">
            <form method="post">
                <div class="mt-4 border p-3">
                <input asp-for="CategoryId" hidden />
                <div class="py-2 col-12">
                    <label asp-for="Code" class="control-label"></label>
                    <input asp-for="Code" class="form-control"  disabled/>
                </div>
                <div class="py-2 col-12">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="py-2 col-12">
                    <label asp-for="IsActive" class="control-label"></label>
                    <select asp-for="IsActive" class="form-select">
                        <option value="true">Active</option>
                        <option value="false">Inactive</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-6">
                        <button type="submit" class="btn btn-primary form-control">
                            Create
                        </button>
                    </div>
                    <div class="col-6 col-md-6">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back to Categories</a>
                    </div>
                </div>
                    <div asp-validation-summary="ModelOnly" class="row mt-2 "></div>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
