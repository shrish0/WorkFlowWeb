@model Category
<div class="row w-100 justify-content-center px-0 my-auto">
    <div class="card shadow mb-5 border-0 px-0 col-lg-8 col-sm-12">
        <div class="card-header bg-secondary bg-gradient text-white">
            <h2>Delete Category</h2>
        </div>
        <div class="card-body">
            <h4>Are you sure you want to delete this category?</h4>
            <dl class="row">
                <dt class="col-sm-3">Category Code</dt>
                <dd class="col-sm-9">@Model.Code</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Created By</dt>
                <dd class="col-sm-9">@Model.CreatedBy</dd>

                <dt class="col-sm-3">Created At</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("g")</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@((Model.IsActive) ? "Active" : "Inactive")</dd>
            </dl>

            <h5>Related SubCategories</h5>
            @if (Model.SubCategories.Any())
            {
                <ul>
                    @foreach (var subCategory in Model.SubCategories)
                    {
                        <li> <strong> Sub Category : </strong>  @subCategory.Code  <br /> <strong>   Description :  </strong> @subCategory.Description  </li>
                    }
                </ul>
                <div class="alert alert-warning">
                    <strong>Note:</strong> Deleting this category will also delete all related subcategories.
                </div>
            }
            else
            {
                <p>No related subcategories.</p>
            }

            <form method="post" asp-action="Delete">
                <input type="hidden" asp-for="CategoryId" />
                <div class="row">
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-primary w-100">Delete</button>
                    </div>
                    <div class="col-md-6">
                        <a asp-action="Index" class="btn btn-outline-secondary w-100">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>