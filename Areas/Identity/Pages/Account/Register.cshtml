@page
@model RegisterModel

<div class="card shadow border-2 mt-5 col-10 col-sm-8 col-md-8 col-xl-6 m-auto ">
    <div class="card-header bg-dark text-center text-white-50 h2 flex-grow-1">
        <h2>Create a new account.</h2>
    </div>
    <div class="card-body  ">
        <div class="col-md-12">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="row">
                        
                        <div asp-validation-summary="ModelOnly" class="text-bg-danger" role="alert"></div>
                        <div class="form-floating mb-3 col-12">
                            <input asp-for="Input.Email" class="form-control bg-opacity-25 text-white" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="ms-2 text-white">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-6">
                    <input asp-for="Input.FirstName" class="form-control text-white" aria-required="true" placeholder="First Name" />
                    <label asp-for="Input.FirstName" class="ms-2 text-white">First Name</label>
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-6">
                            <input asp-for="Input.LastName" class="form-control"  placeholder="Last Name" />
                              <label asp-for="Input.LastName" class="ms-2 text-white">Last Name</label>
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-6">
                            <input asp-for="Input.Address" class="form-control"  aria-required="true" placeholder="Address" />
                    <label asp-for="Input.Address" class="ms-2 text-white">Address</label>
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-6">
                            <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" placeholder="PhoneNumber" />
                    <label asp-for="Input.PhoneNumber" class="ms-2 text-white">PhoneNumber</label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                <div class="form-floating mb-3 col-6">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="ms-2 text-white">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-6">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword" class="ms-2 text-white">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <@* div class="form-floating mb-3 col-6">
                    <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                        <option disabled selected>---Select Role---</option>
                   </select>
                    </div> *@
                    <br />
                <button id="registerSubmit" type="submit" class=" mx-auto d-block col-8 justify-content-center btn btn-lg btn-dark">Register</button>
                 <div class="mt-2">
                    <ul>
                        <li>Must be alphanumeric</li>
                        <li>atleast one upper case or lower case</li>
                    </ul>
                 </div>
            </form>
                </div>
           
    </div>
</div>






@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
